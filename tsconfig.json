{
	"compilerOptions": {
		"target": "ES6",
		"removeComments": true,
		"module": "commonjs",
		"outDir": "./nestDist",
		"strictNullChecks": false,
		"noImplicitAny": false,
		"strict": true,
		"baseUrl": "./",
		"forceConsistentCasingInFileNames": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"declaration": true,
	},
	"include": ["./src/*.ts"]
}
